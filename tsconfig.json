{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",

    "allowJs": true,
    "checkJs": true,
    "strict": true,

    "module": "NodeNext",
    "target": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    "jsx": "preserve",
    "jsxImportSource": "pota",

    "sourceMap": true,

    "types": ["pota", "dom-flair", "tm-textarea", "node"]
  },
  "exclude": ["./src/dist/*", "node_modules"]
}
