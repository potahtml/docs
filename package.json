{
	"name": "pota-docs",
	"description": "pota docs",
	"version": "0.1.5",
	"author": "Tito Bouzout",
	"type": "module",
	"homepage": "https://pota.quack.uy/",
	"scripts": {
		"dev": "kompiler",
		"update": "npm update --include=dev --save && npm run dev"
	},
	"dependencies": {
		"@types/node": "^22.15.29",
		"dom-flair": "file:../../dom-flair",
		"fflate": "^0.8.2",
		"kompiler": "file:../../kompiler",
		"monaco-editor": "^0.52.2",
		"pota": "file:../pota",
		"tm-textarea": "file:../../solid/tm-textarea"
	},
	"kompiler": {
		"watch": ["../pota/src/babel-preset", "src/release.js"],
		"builds": [
			{
				"input": ["src/index.jsx"],
				"output": "src/dist/",
				"map": [["/src/node_modules", "/node_modules"]],
				"minified": false,
				"treeshake": false,
				"babel": {
					"plugins": [
						[
							"dom-flair/babel",
							{
								"path": "src/assets/flair.css"
							}
						]
					],
					"presets": [["pota/babel-preset"]]
				}
			},
			{
				"input": ["src/pages/@playground/preview/index.jsx"],
				"output": "src/dist/preview/",
				"minified": false,
				"treeshake": false,
				"root": false
			},
			{
				"input": ["src/pages/benchmark/dev/index.jsx"],
				"output": "src/pages/benchmark/dev/main.js",
				"minified": false,
				"treeshake": true,
				"root": false,
				"babel": {
					"presets": [["pota/babel-preset"]]
				}
			},
			{
				"input": ["src/pages/benchmark/regular/index.jsx"],
				"output": "src/pages/benchmark/regular/main.js",
				"minified": false,
				"treeshake": true,
				"root": false,
				"babel": {
					"presets": [["pota/babel-preset"]]
				}
			},
			{
				"input": ["src/pages/benchmark/html/index.jsx"],
				"output": "src/pages/benchmark/html/main.js",
				"minified": false,
				"treeshake": true,
				"root": false,
				"babel": {
					"presets": [["pota/babel-preset"]]
				}
			},
			{
				"input": ["src/pages/tests/transform-tests.jsx"],
				"output": "src/pages/tests/transform-tests.js",
				"minified": false,
				"treeshake": true,
				"root": false,
				"babel": {
					"presets": [["pota/babel-preset"]]
				}
			}
		]
	},
	"prettier": {
		"printWidth": 70,
		"useTabs": true,
		"semi": false,
		"singleQuote": true,
		"quoteProps": "as-needed",
		"jsxSingleQuote": false,
		"trailingComma": "all",
		"bracketSpacing": true,
		"bracketSameLine": false,
		"arrowParens": "avoid",
		"proseWrap": "never",
		"endOfLine": "lf",
		"singleAttributePerLine": true,
		"embeddedLanguageFormatting": "off"
	}
}
