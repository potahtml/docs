{
	"name": "pota-docs",
	"description": "pota docs",
	"version": "0.1.4",
	"author": "Tito Bouzout",
	"type": "module",
	"homepage": "https://pota.quack.uy/",
	"imports": {
		"#main": "./src/@main.jsx"
	},
	"scripts": {
		"dev": "concurrently --kill-others \"npm:dev:*\"",
		"dev:compiler": "kompiler",
		"dev:source": "cpx \"../pota/**\" ./node_modules/pota/ -w",
		"dev:standalone": "cpx \"./node_modules/pota/dist/**\" ./src/dist/preview/standalone/ -w",
		"update": "npm update --include=dev && npm run dev"
	},
	"dependencies": {
		"concurrently": "^8.2.2",
		"cpx2": "^6.0.1",
		"dom-flair": "^6.0.49",
		"fflate": "^0.8.1",
		"kompiler": "^7.0.143",
		"pota": "^0.3.7"
	},
	"kompiler": {
		"builds": [
			{
				"input": [
					"src/index.jsx"
				],
				"output": "src/dist/",
				"watch": [
					"node_modules"
				],
				"minified": false,
				"babel": {
					"plugins": [
						[
							"dom-flair/babel",
							{
								"path": "src/assets/flair.css"
							}
						]
					],
					"presets": [
						[
							"pota/babel-preset"
						]
					]
				}
			},
			{
				"input": [
					"src/pages/preview/index.jsx"
				],
				"output": "src/dist/preview/",
				"minified": false,
				"root": false
			}
		]
	},
	"prettier": {
		"printWidth": 70,
		"useTabs": true,
		"semi": false,
		"singleQuote": true,
		"quoteProps": "as-needed",
		"jsxSingleQuote": false,
		"trailingComma": "all",
		"bracketSpacing": true,
		"bracketSameLine": false,
		"arrowParens": "avoid",
		"proseWrap": "never",
		"endOfLine": "lf",
		"singleAttributePerLine": true
	}
}
